<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>true</ImplicitUsings>
    <Nullable>enable</Nullable>
    <StartupObject>Tot.Program</StartupObject>
    <ApplicationIcon>Tot_T_Icon_128_FioleBaguette.ico</ApplicationIcon>
    <Authors>Totchinuko</Authors>
    <Version>$([System.IO.File]::ReadAllText("$(MSBuildProjectDirectory)\\..\\VERSION"))</Version>
    <PublishSingleFile>true</PublishSingleFile>
    <SelfContained>true</SelfContained>
    <EnforceCodeStyleInBuild>true</EnforceCodeStyleInBuild>
    <Deterministic>true</Deterministic>
    <TreatWarningsAsErrors>true</TreatWarningsAsErrors>
    <Product>TotChef</Product>
    <Description>CLI tool for Conan Exile Modding</Description>
    <Company>tot-soft</Company>
    <Copyright>Copyright © $([System.DateTime]::Now.Year) tot-soft.</Copyright>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/Totchinuko/TotChef.git</PackageProjectUrl>
    <RepositoryUrl>https://github.com/Totchinuko/TotChef.git</RepositoryUrl>
    <RepositoryType>Private</RepositoryType>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="Tot_T_Icon_128_FioleBaguette.ico" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="CommandLineParser" Version="2.9.1" />
    <PackageReference Include="LibGit2Sharp" Version="0.31.0" />
  </ItemGroup>

</Project>
